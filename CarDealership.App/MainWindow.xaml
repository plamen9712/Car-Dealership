<Window x:Class="CarDealership.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarDealership.App"
        mc:Ignorable="d"
        Title="TrueSlavs ||| Car Dealership" Height="341.784" Width="688.821">
    <Grid Margin="0,0,3.8,2.6">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="140,10,105.6,0" Text="Welcome to the TrueSlavs ||| Car Catalog" VerticalAlignment="Top" Height="27" Width="433" FontFamily="Copperplate Gothic Light" RenderTransformOrigin="0.501,0.613" FontSize="18" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Height="66" Margin="428,204,0,0" VerticalAlignment="Top" Width="100" BorderThickness="2" Background="#FFD8D8D8" Foreground="Black" FontFamily="Century Gothic" Click="button_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="249" Margin="27,42,0,0" VerticalAlignment="Top" Width="368" Source="Images/MainPageImg.jpg"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="428,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.681,0.081" Width="223" FontFamily="Copperplate Gothic Light" FontSize="16"/>
        <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="428,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.681,0.081" Width="223" FontFamily="Copperplate Gothic Light" FontSize="16"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="28" Margin="428,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" FontSize="18" FontFamily="Century Gothic"/>
        <Button x:Name="button_Copy" Content="Sign Up" HorizontalAlignment="Left" Height="66" Margin="551,204,0,0" VerticalAlignment="Top" Width="100" BorderThickness="2" Background="#FFD8D8D8" Foreground="Black" FontFamily="Century Gothic" Click="button_Copy_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="428,149,0,0" VerticalAlignment="Top" Width="223" Height="28" PasswordChar="*"/>

    </Grid>
</Window>
